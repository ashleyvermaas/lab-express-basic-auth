<h3>Sign up</h3>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}

<form action="/signup" method="POST">
<label>
    Username:
    <input type="text" name="username" placeholder="Your username" required>
</label>

<label>
    Password:
    <input type="password" name="password" placeholder="********" required>
</label>
<button type="submit">Create account</button>
</form>
